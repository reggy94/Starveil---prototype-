<script>
  const matches = [
    {name: "Alex", description: "Energetic and caring, aligns with your moon sign."},
    {name: "Sam", description: "Creative soul, perfect for your rising sign."},
    {name: "Jamie", description: "Grounded personality matching your Venus."}
  ];

  document.getElementById("birthForm").addEventListener("submit", function(e){
    e.preventDefault();
    let output = "<h2>Your Matches</h2>";
    matches.forEach(m => {
      output += `<div class='profile'><h3>${m.name}</h3><p>${m.description}</p>
      <button class='button'>Message</button></div>`;
    });
    document.getElementById("matches").innerHTML = output;
  });
</script>

